<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/point_background">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconSSR"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ssgpaylogo" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/close_button"
            android:onClick="toFit" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/help"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/info" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="186dp"
            android:layout_height="310dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="55dp"
            app:srcCompat="@drawable/robot" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="80dp"
            android:layout_height="41dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="239dp"
            android:fontFamily="@font/bmhannapro"
            android:rotation="5"
            android:text="TOTAL"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTotalPoint"
            android:layout_width="80dp"
            android:layout_height="41dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="226dp"
            android:fontFamily="@font/bmhannapro"
            android:rotation="5"
            android:text="00"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="41dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="174dp"
            android:fontFamily="@font/bmhannapro"
            android:rotation="5"
            android:text="TODAY"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Point"
            android:layout_width="80dp"
            android:layout_height="41dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="161dp"
            android:fontFamily="@font/bmhannapro"
            android:rotation="5"
            android:text="00"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgCoverB"
            android:layout_width="70dp"
            android:layout_height="190dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="70dp"
            app:srcCompat="@drawable/cover_back" />

        <ImageView
            android:id="@+id/imgCartB"
            android:layout_width="129dp"
            android:layout_height="158dp"
            android:layout_gravity="bottom|right"
            app:srcCompat="@drawable/cart_back" />

        <ImageView
            android:id="@+id/imgConveyor"
            android:layout_width="291dp"
            android:layout_height="96dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
            android:background="@drawable/amin"
            android:clickable="true" />

        <ImageView
            android:id="@+id/coin_pop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="100dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="100dp"
            android:id="@+id/empty"/>
        <ImageView
            android:id="@+id/imgCartF"
            android:layout_width="131dp"
            android:layout_height="66dp"
            android:layout_gravity="bottom|right"
            app:srcCompat="@drawable/cart_front" />

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="43dp"
            android:layout_height="71dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="110dp"
            android:background="@drawable/peacock_01" />

        <ImageView
            android:id="@+id/imgGetProduct"
            android:layout_width="43dp"
            android:layout_height="71dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="100dp"
            android:visibility="gone"
            android:background="@drawable/peacock_01" />

        <ImageView
            android:id="@+id/imgCoverF"
            android:layout_width="70dp"
            android:layout_height="250dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/cover_front" />

        <ImageView
            android:id="@+id/imgAd"
            android:layout_width="324dp"
            android:layout_height="171dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="73dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/ad_1"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="358dp"
            android:layout_height="268dp"
            android:layout_gravity="center_horizontal|top"
            app:srcCompat="@drawable/ad_board" />

    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.shin.ssr.layout.notification.handlers.BigPictureSocialMainActivity"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical|center_horizontal|center|clip_horizontal"
            android:layout_marginRight="10dp"
            android:background="@drawable/close_icon2"
            android:onClick="closePage"
            tools:ignore="OnClick" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:background="@drawable/recommend" />

            <TextView
                android:id="@+id/custom_recom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#761a36"
                android:fontFamily="@font/bmhannapro"
                android:gravity="center"
                android:text=""
                android:textSize="20dp" />

        </LinearLayout>

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:text="상품 추천"-->
        <!--android:textAlignment="center"-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="40dp"-->
        <!--android:textStyle="bold"-->
        <!--android:fontFamily="@font/nanumbarunpenr"/>-->

    </FrameLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:radius="2dp"
        android:stretchColumns="*"
        android:weightSum="4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"

            android:elevation="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommendedProduct1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommendedProduct1_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/applesgothic_regular"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommendedProduct1_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/applesgothic_regular"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/recommendedProduct1_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/applesgothic_regular"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textAlignment="center" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/lightred"
            android:elevation="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommendedProduct2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/recommendedProduct2_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:text="NULL"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommendedProduct2_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:text="NULL"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/recommendedProduct2_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:text="NULL"
                    android:textAlignment="center" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"

            android:elevation="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommendedProduct3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommendedProduct3_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:text="NULL"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommendedProduct3_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:text="NULL"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/recommendedProduct3_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:text="NULL"
                    android:textAlignment="center" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/lightred"
            android:elevation="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommendedProduct4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommendedProduct4_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:text="NULL"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommendedProduct4_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:text="NULL"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/recommendedProduct4_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:text="NULL"
                    android:textAlignment="center" />
            </LinearLayout>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"
            android:background="#D2D2D2" />
    </TableLayout>
</LinearLayout>

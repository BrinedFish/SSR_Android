<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c98964"

    android:orientation="vertical"
    tools:context="com.shin.ssr.layout.notification.handlers.BigPictureSocialMainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:background="@drawable/recommend" />

        </LinearLayout>

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:text="상품 추천"-->
        <!--android:textAlignment="center"-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="40dp"-->
        <!--android:textStyle="bold"-->
        <!--android:fontFamily="@font/nanumbarunpenr"/>-->

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recomshape"
        android:orientation="vertical"
        android:radius="3dp"
        android:stretchColumns="*"
        android:weightSum="4">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ssgpaydark">

            <TextView
                android:id="@+id/custom_recom"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/bmhannapro"
                android:gravity="center"
                android:text=""
                android:textColor="@color/chartbg"
                android:textSize="20sp"

                />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:onClick="closePage"
                android:src="@drawable/close_icon2"
                tools:ignore="OnClick"

                />
        </RelativeLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@color/icons"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/recommendedProduct1"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@color/icons"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommendedProduct1_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/applesgothic_regular"
                    android:gravity="center_horizontal"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommendedProduct1_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/applesgothic_regular"
                    android:gravity="center_horizontal"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/recommendedProduct1_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/applesgothic_regular"
                    android:gravity="center_horizontal"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@color/icons"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommendedProduct2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />


            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@color/icons"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/recommendedProduct2_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommendedProduct2_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/recommendedProduct2_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"

            android:background="@color/icons"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommendedProduct3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@color/icons"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommendedProduct3_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommendedProduct3_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/recommendedProduct3_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@color/icons"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommendedProduct4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:background="@color/icons"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommendedProduct4_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommendedProduct4_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/recommendedProduct4_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/applesgothic_regular"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textAlignment="center" />
            </LinearLayout>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"
            android:background="#D2D2D2" />
    </TableLayout>
</LinearLayout>

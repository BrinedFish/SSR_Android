<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shin.ssr.layout.notification.handlers.BigPictureSocialMainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="상품 추천"
        android:textSize="40dp"
        android:textColor="#000000"
        android:textStyle="bold"/>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical">

            <TableRow android:weightSum="5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recommendedProduct1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="2" />
                <TableLayout
                    android:layout_weight="3"
                    android:weightSum="3"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/recommendedProduct1_name"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"

                        android:gravity="center_horizontal"
                        android:text="HOHO" />

                    <TextView
                        android:id="@+id/recommendedProduct1_weight"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="HEY" />

                    <TextView
                        android:id="@+id/recommendedProduct1_price"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="HEY" />

                </TableLayout>
            </TableRow>
            <TableRow android:weightSum="5"
                android:layout_weight="1"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/recommendedProduct2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1" />

                <TextView
                    android:id="@+id/recommendedProduct2_name"
                    android:layout_width="158dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="요요" />
                <TextView
                    android:id="@+id/recommendedProduct2_weight"
                    android:layout_width="158dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="요요" />
                <TextView
                    android:id="@+id/recommendedProduct2_price"
                    android:layout_width="158dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="요요" />
            </TableRow>
            <TableRow android:weightSum="5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recommendedProduct3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/recommendedProduct3_name"
                    android:layout_width="158dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="요요" />
                <TextView
                    android:id="@+id/recommendedProduct3_weight"
                    android:layout_width="158dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="요요" />
                <TextView
                    android:id="@+id/recommendedProduct3_price"
                    android:layout_width="158dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="요요" />
            </TableRow>

            <TableRow android:weightSum="5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recommendedProduct4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/recommendedProduct4_name"
                    android:layout_width="158dp"

                    android:text="요요" />
                <TextView
                    android:id="@+id/recommendedProduct4_weight"
                    android:layout_width="158dp"

                    android:text="요요" />
                <TextView
                    android:id="@+id/recommendedProduct4_price"
                    android:layout_width="158dp"

                    android:text="요요" />
            </TableRow>
        </TableLayout>
</LinearLayout>

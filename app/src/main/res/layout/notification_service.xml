<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notif_small"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="horizontal"
    android:gravity="center">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ssg_noti_back_01"/>

    <ImageView
        android:id="@+id/notif_icon"
        android:layout_width="47dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="9dp"
        android:src="@drawable/ssg_noti_icon" />

    <TextView
        android:id="@+id/notif_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/notif_icon"
        android:singleLine="true"
        android:text="잔액"
        android:textColor="#FFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notif_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/notif_title"
        android:singleLine="true"
        android:text="걸음수"
        android:textColor="#FFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notif_content"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@+id/notif_title"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/notif_icon"
        android:singleLine="true"
        android:text="85,590 원"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notif_content2"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@+id/notif_title"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/notif_content"
        android:singleLine="true"
        android:text=""
        android:textColor="#ffff"
        android:textSize="20sp" />

</RelativeLayout>